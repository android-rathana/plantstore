<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButtonFillStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/luckyPlant</item>
    </style>

    <style name="BaseButtonIconOnlyStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceCorner.Small</item>
    </style>

    <style name="BaseButtonFillStyle.Small">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonFillStyle" parent="BaseButtonFillStyle">
        <!---->
    </style>

    <style name="ButtonIconOnlyStyle" parent="BaseButtonIconOnlyStyle">

    </style>

    <style name="ShapeAppearanceCorner" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_12</item>
        <item name="cornerSizeTopRight">@dimen/dp_12</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_12</item>
        <item name="cornerSizeBottomRight">@dimen/dp_12</item>
    </style>

    <style name="ShapeAppearanceCorner.Small" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_8</item>
        <item name="cornerSizeTopRight">@dimen/dp_8</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_8</item>
        <item name="cornerSizeBottomRight">@dimen/dp_8</item>
    </style>

    <style name="ShapeAppearanceCut" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">@dimen/dp_10</item>
        <item name="cornerSizeTopRight">@dimen/dp_10</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_10</item>
        <item name="cornerSizeBottomRight">@dimen/dp_10</item>
    </style>

    <style name="TextAppearanceRegular" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextAppearanceMedium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextAppearanceBold" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/primacy</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAppearance">@style/TextAppearanceRegular</item>
    </style>

    <style name="TextViewMediumStyle">
        <item name="android:textColor">@color/primacy</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
    </style>

    <style name="TextViewBoldStyle">
        <item name="android:textColor">@color/primacy</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAppearance">@style/TextAppearanceBold</item>
    </style>

    <style name="ListItem" parent="TextViewStyle" />

    <style name="ListItem.Title">
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Subtitle">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Category">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/chinchila</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="ListItem.LablePrice">
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/chinchila</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="ListItem.Location">
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="ListItem.Content">

    </style>

    <style name="ListItem.Content.Price">
        <item name="android:textColor">@color/burntSienna</item>
        <item name="android:textAppearance">@style/TextAppearanceBold</item>
    </style>

    <style name="Clickable">
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Clickable.Padding">
        <item name="android:padding">@dimen/dp_4</item>
    </style>

    <style name="ItemCard" parent="TextViewStyle" />

    <style name="ItemCard.Title">
        <item name="android:textAppearance">@style/TextAppearanceBold</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">@color/deepDarkGreen</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ItemCard.Description">
        <item name="android:textAppearance">@style/TextAppearanceRegular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/icscape</item>
    </style>

</resources>